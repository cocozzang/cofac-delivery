{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {},
    "composite": true
  },
  "references": [
    { "path": "./apps/notification/tsconfig.app.json" },
    { "path": "./apps/order/tsconfig.app.json" },
    { "path": "./apps/payment/tsconfig.app.json" },
    { "path": "./apps/product/tsconfig.app.json" },
    { "path": "./apps/user/tsconfig.app.json" }
  ]
}
